<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldpath="/administrator/components/com_deallab/models/fields">
        <field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC"/>

        <field name="title" type="text" class="inputbox"
            size="40" label="JGLOBAL_TITLE"
            description="" required="true" />

        <field name="alias" type="text" class="inputbox"
            size="40" label="JFIELD_ALIAS_LABEL"
            description="" />
            
        <field
            name="state"
            type="list"
            label="JSTATUS"
            description=""
            class="inputbox"
            size="1"
            default="1">
            <option
                value="1">JPUBLISHED</option>
            <option
                value="0">JUNPUBLISHED</option>
            <option
                value="2">JARCHIVED</option>
            <option
                value="-2">JTRASHED</option>
        </field>

        <field name="ordering" type="Ordering" class="inputbox"
            label="JFIELD_ORDERING_LABEL"
            description="JFIELD_ORDERING_DESC" />
    </fieldset>

</form>
